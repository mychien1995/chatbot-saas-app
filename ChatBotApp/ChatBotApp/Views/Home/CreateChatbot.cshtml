
@using ChatBotApp.Models
@model Chatbot

@{
    ViewBag.Title = "Create Chatbot";
}

<div class="container mt-4">
    <h2 class="text-center">Create Chatbot</h2>

    @using (Html.BeginForm("CreateChatbot", "Home", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>Bot ID</label>
            @Html.TextBoxFor(m => m.BotId, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            <label>Bot Title</label>
            @Html.TextBoxFor(m => m.BotTitle, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            <label>Opening Message</label>
            @Html.TextAreaFor(m => m.Opening, new { @class = "form-control", required = "required", @rows = 5 })
        </div>

        <div class="form-group">
            <label>Closing Message</label>
            @Html.TextAreaFor(m => m.Closing, new { @class = "form-control", @rows = 5 })
        </div>

        <div class="mt-3 text-center">
            <button type="submit" class="btn btn-primary">Create Chatbot</button>
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to List</a>
        </div>
    }
</div>
